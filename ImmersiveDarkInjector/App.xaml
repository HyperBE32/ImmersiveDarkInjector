<Application x:Class="ImmersiveDarkInjector.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ImmersiveDarkInjector"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             ShutdownMode="OnExplicitShutdown"
             Startup="App_OnStartup">

    <Application.Resources>
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources/>
                <ui:XamlControlsResources/>
            </ResourceDictionary.MergedDictionaries>

            <ContextMenu x:Key="TaskbarIconMenu">
                <MenuItem Header="Settings" Click="TaskbarIcon_ContextMenu_Settings"/>
                <Separator/>
                <MenuItem Header="GitHub"   Click="TaskbarIcon_ContextMenu_GitHub"/>
                <MenuItem Header="Exit"     Click="TaskbarIcon_ContextMenu_Exit"/>
            </ContextMenu>

        </ResourceDictionary>
    </Application.Resources>

</Application>
