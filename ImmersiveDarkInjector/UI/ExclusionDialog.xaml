<ui:ContentDialog x:Class="ImmersiveDarkInjector.ExclusionDialog"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:local="clr-namespace:ImmersiveDarkInjector"
                  xmlns:ui="http://schemas.modernwpf.com/2019"
                  mc:Ignorable="d"
                  Title="Enter the name of the application to exclude..."
                  PrimaryButtonText="OK"
                  CloseButtonText="Cancel">

    <TextBox Loaded="UI_TextBox_OnLoaded" Text="{Binding Result}" Margin="0,5,0,0" VerticalContentAlignment="Center"/>

</ui:ContentDialog>
